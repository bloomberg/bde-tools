#!/bin/ksh

IN=tmp/in
OUT=tmp/out

function repop {
  rm -rf $IN
  rm -rf $OUT
  mkdir -p $IN $OUT

  for i in bde bce bte bae
  do
    cp groups/$i/include/b*.h $IN
  done

  find enterprise -name "*.h" -exec cp {} $IN \;
  #rm $IN/bdemf_typelist.h

  chmod 664 $IN/*
}

if [[ -n $1 ]]; then
  print "repopulating $IN..."
  repop
else
  print "not repopulating"
fi

cd tmp
quik_h2doxy in out
cd out
doxygen /bbcm/infrastructure/bin/bde2doxy.template
