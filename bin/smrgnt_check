#!/bin/ksh

# Like smrgNT but takes one extra argument at beginning:
# Name of file to contain stderr.
# $1 will always be created, empty if no stderr from /bb/bin/smrgNT.

cmd=/bb/bin/smrgNT
errfile=$1 ; shift

$cmd "$@" 2>$errfile
status=$?

if [[ $status -ne 0 || -s $errfile ]]
then
    cat $errfile >&2
    echo "($cmd exit status $status)" >&2
    exit 1
else
    exit 0
fi

