    -Wpacked -Wpointer-arith \
    -Wwrite-strings -Wno-unused-value -Wno-char-subscripts -Wsign-compare \
    -Wparentheses -Wstrict-overflow=1 -Wvla \
    -Wvolatile-register-var -fdiagnostics-show-option

