# Common makefile snippet used to populate the set of ufid flavors to build in
# the package-based build
# Note that if testing this file's variables, remember to set
# SHELL=/bin/bash
DEFAULT_STATIC_FLAVOR_32bit:=opt_exc_mt
DEFAULT_STATIC_FLAVOR_64bit:=opt_exc_mt_64
# DRQS 56729929 - remove opt_dbg_exc_mt_safe flavor
STATIC_FLAVORS_32bit:=$(shell echo {opt,dbg,opt_dbg}_exc_mt) $(shell echo {opt,dbg}_exc_mt_safe)
STATIC_FLAVORS_64bit:=$(shell echo {opt,dbg,opt_dbg}_exc_mt_64{,_safe} {opt,dbg}_exc_mt_64_pic)
ifeq ($(shell uname),Linux)
 # DRQS 56729929 - add opt_exc_mt_pic for Linux
 STATIC_FLAVORS_32bit:=$(STATIC_FLAVORS_32bit) opt_exc_mt_pic
endif
STATIC_FLAVORS:=$(STATIC_FLAVORS_64bit) $(STATIC_FLAVORS_32bit)
DYNAMIC_FLAVOR_32bit:=opt_exc_mt_shr
DYNAMIC_FLAVOR_64bit:=opt_exc_mt_64_shr
DYNAMIC_FLAVORS:=$(DYNAMIC_FLAVOR_32bit) $(DYNAMIC_FLAVOR_64bit)
ALL_FLAVORS:=$(STATIC_FLAVORS) $(DYNAMIC_FLAVORS)
